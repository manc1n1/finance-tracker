<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>Finance Tracker</title>
		<link
			href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
			rel='stylesheet'
			integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
			crossorigin='anonymous'
		/>
		<script src='https://code.jquery.com/jquery-1.12.4.min.js'></script>
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Arsenal&display=swap'
			rel='stylesheet'
		/>
		<link rel='stylesheet' href='/css/style.css' />
	</head>
	<body style='background-color: #313244'>
		<header
			class='display-flex justify-space-between align-center p-2'
			style='color: #cdd6f4; background-color: #1e1e2e;'
		>
			<a href='/' style='color: #cdd6f4; text-decoration: none;'>
				<h1>
					Finance Tracker
				</h1>
			</a>
			{{#if logged_in}}
				<nav>
					<button
						class='btn btn-info'
						data-bs-toggle='modal'
						data-bs-target='#addPortfolioModal'
						id='addPortfolio'
					>Add Portfolio</button>
					<button class='btn btn-danger' id='logout'>Logout</button>
				</nav>
			{{/if}}
		</header>
		<main class='container container-fluid mt-5'>
			{{{body}}}
			{{#if logged_in}}
			<div
				class='modal fade'
				id='addPortfolioModal'
				tabindex='-1'
				aria-labelledby='exampleModalLabel'
				aria-hidden='true'
			>
				<div class='modal-dialog'>
					<div
						class='modal-content'
						style='background-color: #313244'
					>
						<div
							class='modal-header'
							style='color: #cdd6f4; background-color: #1e1e2e;'
						>
							<h1 class='modal-title' id='modalTitle'>Add
								Portfolio</h1>
							<button
								type='button'
								class='btn-close'
								data-bs-dismiss='modal'
								aria-label='Close'
								style='background-color: #f38ba8'
							></button>
						</div>
						<div class='modal-body'>
							<form class='form portfolio-form'>
								<div class='form-group'>
									<label
										for='name-portfolio'
										style='color: #a6adc8;'
									>Portfolio Name:</label>
									<input
										class='form-input'
										type='text'
										id='name-portfolio'
									/>
								</div>
								<div class='form-group'>
									<label
										for='salary-portfolio'
										style='color: #a6adc8;'
									>Salary:</label>
									<input
										class='form-input'
										type='number'
										step='0.01'
										id='salary-portfolio'
									/>
								</div>
								<div class='form-group'>
									<h3 style='color: #bac2de;'>Add an
										Investment</h3>
									<select
										class='form-select'
										id='investmentSelect'
										aria-label='Investment type'
									>
										<option selected>Choose Investment Type</option>
										<option value='Stock'>Stock</option>
										<option
											value='Cryptocurrency'
										>Cryptocurrency</option>
										<option value='Other'>Other</option>
									</select>
								</div>
								<div id='check' class='Stock option'>
									<div class='form-group'>
										<label
											for='stock-name-investment'
											style='color: #a6adc8;'
										>Stock Symbol:</label>
										<input
											class='form-input'
											type='text'
											id='stock-name-investment'
										/>
									</div>
									<div class='form-group'>
										<label
											for='stock-quantity-investment'
											style='color: #a6adc8;'
										>Stock Quantity:</label>
										<input
											class='form-input'
											type='number'
											step='0.01'
											id='stock-quantity-investment'
										/>
									</div>
									<button
										type='submit'
										class='btn btn-info'
										id='btn-save-stock'
									>Save</button>
								</div>
								<div
									id='check'
									class='Cryptocurrency option'
								></div>
								<div id='check' class='Other option'>
									<div class='form-group'>
										<label
											for='name-investment'
											style='color: #a6adc8;'
										>Investment Name:</label>
										<input
											class='form-input'
											type='text'
											id='name-investment'
										/>
									</div>
									<div class='form-group'>
										<label
											for='other-quantity-investment'
											style='color: #a6adc8;'
										>Investment Quantity:</label>
										<input
											class='form-input'
											type='number'
											step='0.01'
											id='other-quantity-investment'
										/>
									</div>
									<div class='form-group'>
										<label
											for='other-value-investment'
											style='color: #a6adc8;'
										>Investment Value:</label>
										<input
											class='form-input'
											type='number'
											step='0.01'
											id='other-value-investment'
										/>
									</div>
									<button
										type='submit'
										class='btn btn-info'
										id='btn-save-other'
									>Save</button>
								</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			{{/if}}
		</main>
		<footer>
		</footer>
		<script
			src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js'
			integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL'
			crossorigin='anonymous'
		></script>
		{{#if logged_in}}
			<script src='/js/logout.js'></script>
			<script src='/js/addPortfolio.js'></script>
			<script>$(document).ready(function() { $("select").change(function()
				{ $(this).find("option:selected").each(function() { var
				optionValue = $(this).attr("value"); if (optionValue) {
				$(".option").not("." + optionValue).hide(); $("." +
				optionValue).show(); } else { $(".option").hide(); } });
				}).change(); });</script>
		{{/if}}
	</body>
</html>