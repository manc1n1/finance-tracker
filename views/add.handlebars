<h1 style='color: #bac2de;'>
	Add Investment
</h1>
<form class='form add-form'>
	<div class='form-group'>
		<label for='name-add' style='color: #a6adc8;'>
			Name (Stock ticker symbol (ie: AAPL)):
		</label>
		<input class='form-input' type='text' id='name-add' required />
	</div>
	<div class='form-group'>
		<label for='quantity-signup' style='color: #a6adc8;'>
			Quantity:
		</label>
		<input class='form-input' type='text' id='quantity-add' required />
	</div>
	<div class='form-group'>
		<button class='btn btn-lg btn-link' type='submit'>
			Add
		</button>
	</div>
</form>
<script src='/js/add.js'></script>